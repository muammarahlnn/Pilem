<resources>

    <style name="Theme.Pilem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black_primary</item>
        <item name="colorPrimaryVariant">@color/black_background</item>
        <item name="colorOnPrimary">@color/gray_primary</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Pilem.TransparentStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black_primary</item>
        <item name="android:statusBarColor">@color/black_primary</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/gray_primary</item>
        <item name="android:textColorSecondary">@color/gray_primary</item>
        <item name="android:textColor">@color/gray_primary</item>
        <item name="android:background">@color/black_primary</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>
</resources>